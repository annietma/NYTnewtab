{
  "name": "NYT New Tab",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Keep up with the headlines in your new tab. Not affiliated with The New York Times.",
  "icons": {
    "16": "icons/NYTlogo.png",
    "48": "icons/NYTlogo.png",
    "128": "icons/NYTlogo.png"
  },
  "chrome_url_overrides": {
    "newtab": "src/override/override.html"
  },
  "browser_action": {
      "default_popup": "src/options/options.html"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "tabs"
  ]
}